# Local Development Configuration
# Copy this to .env and update with your values

# Core
DEBUG=true
PROJECT_NAME=TerraLink Portal API
VERSION=1.0.0

# Database (SQLite for local dev)
DATABASE_URL=sqlite+aiosqlite:///./terralink.db

# Security (use any random string for local dev)
SECRET_KEY=local-dev-secret-key-change-in-production
JWT_SECRET=local-dev-jwt-secret-change-in-production

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS (your local frontend URL)
ALLOWED_ORIGINS=["http://localhost:6001","http://localhost:3000"]

# Cookies (IMPORTANT: false for localhost)
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# Access Control
ALLOWED_DOMAINS=["terralink.cl","gmail.com"]
ADMIN_EMAILS=["admin@terralink.cl"]

# Rate Limiting (optional for local)
RATE_LIMIT_ENABLED=false

# Redis (optional for local - sessions work without it)
USE_REDIS_SESSIONS=false